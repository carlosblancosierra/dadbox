<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/DosisTextViewStyle</item>
        <item name="buttonStyle">@style/DosisButtonStyle</item>
    </style>

    <style name="DosisTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="DosisButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:background">@drawable/area_list_button_gradient</item>
    </style>

</resources>
